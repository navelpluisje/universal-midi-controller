{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES6",
    "allowJs": true,
    "module": "CommonJS",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "paths": {
      "main/*": [
        "src/main/*"
      ],
      "preload": [
        "src/preload"
      ],
      "types": [
        "src/types"
      ],
      "types/*": [
        "src/types/*"
      ],
      "utils": [
        "src/utils"
      ],
      "utils/*": [
        "src/utils/*"
      ],
      "shared/*": [
        "src/windows/shared/*"
      ],
      "mainWindow/*": [
        "src/windows/mainWindow/*"
      ],
      "midiMonitor/*": [
        "src/windows/midiMonitor/*"
      ],
      "*": [
        "node_modules/*",
      ]
    },
    "jsx": "react-jsx",
  },
  "include": [
    "./src/**/*"
  ]
}